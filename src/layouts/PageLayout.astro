---
import Navbar from '../components/Navbar.astro';
import '../main.css';

export interface Props {
    title: string;
}

const { title } = Astro.props;
---

<html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/svg+xml" href="favicon.svg" />
        <meta name = "generator" content={Astro.generator} />
        <title>MBBP: {title}</title>
    </head>
    <body>
        <slot name = "above-navbar" />
        <Navbar active="home" />
        <slot />
    </body> 
</html>


<style>
    @Layer components {
        .3col {
            @apply grid grid-cols-1 md:grid-cols-2 xl:grid-cols-4 gap-5 px-20 py-3;
        }
    }
</style>